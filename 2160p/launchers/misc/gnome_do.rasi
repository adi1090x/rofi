configuration {
	font:							"FantasqueSansMono Nerd Font 20";
    show-icons:                     true;
	icon-theme: 					"Papirus";
    display-drun: 					"";
    drun-display-format:            "{name}";
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

/* -- Classical -- */
* {
    background:                     #27639AFF;
    background-alt:              	#00000000;
    background-bar:                 #f2f2f240;
    foreground:                     #f2f2f2EE;
    accent:			            	#3DAEE966;
}

